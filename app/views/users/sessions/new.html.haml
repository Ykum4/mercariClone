.single-container
  = render 'shared/single-header'
  %main.single-main
    .login-panel
      .login-no-account
        %p アカウントをお持ちでない方はこちら
        = link_to '新規会員登録', sign_up_path 
      .login-form-inner
        %button.btn-default#facebook-login
          = link_to "Facebookでログイン", '#', class: 'btn-default btn-sns-facebook'
          = icon('fab', 'facebook-square')
        %button.btn-default#google-login
          = link_to "Googleでログイン", '#', class: 'btn-default btn-sns-google'
          = icon('fab', 'google')
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .login-form-inner
          .form-group
            = f.email_field :email, autocomplete: "email", placeholder: "メールアドレス", class: "input-default login-input-text"
          .form-group
            = f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "input-default login-input-text"
          = f.submit "ログイン", class: "login-submit btn-default btn-red"
          = link_to 'パスワードをお忘れの方', '#', class:'if-forget-password'
  = render 'shared/single-footer'



















