.signup-container
  %header.single-header
    %h1
      = link_to '/' do 
        = image_tag '//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3547997460'
  %main.select-signup-way
    %section.signup-way-box
      %h2
        新規会員登録
      .inner
        .content
          = link_to new_user_registration_path, class:'btn-default btn-email' do
            = icon('far', 'envelope')
            メールアドレスで登録
          %button.btn-default#facebook-login
            = icon('fab', 'facebook-square')
            = link_to "Facebookで登録", '#', class: 'btn-default btn-sns-facebook'
          %button.btn-default#google-login
            = icon('fab', 'google')
            = link_to "Googleで登録", '#', class: 'btn-default btn-sns-google'
  = render 'shared/single-footer'
          

